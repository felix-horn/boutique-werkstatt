---
import { Image } from "astro:assets";
import hero from "src/images/hero.jpg";
import tisch from "src/images/tisch.jpg";
import highBoard from "src/images/high-board.jpg";
---

<main>
  <section
    class="loading-fade-in h-screen bg-cover bg-center pt-32 pb-8 flex flex-col justify-between"
    style={`background-image: url(${hero.src})`}
  >
    <h1
      class="font-[Comfortaa_Variable] font-light text-5xl text-[#C2AA6A] text-center text-shadow-lg"
    >
      Boutique
      <br />
      Werkstatt
    </h1>
    <span
      class="font-[Comfortaa_Variable] font-light text-2xl text-[#04040C] text-center text-shadow-lg"
    >
      handgefertigte
      <br />
      Boutique-MÃ¶bel
      <br />
      aus 100% Massivholz
    </span>
  </section>
  <section class="p-6 flex flex-col gap-y-8">
    <div class="scroll-fade-in flex flex-col gap-y-4 items-start">
      <Image src={tisch} alt="Hero Image" class="rounded-lg relative" />
      <span
        class="font-[Comfortaa_Variable] font-light text-xl text-[#ffffff] absolute bottom-4 left-4 text-shadow-lg"
      >
        Couchtisch <br /> "Floating Braunglas"</span
      >
    </div>
    <div class="scroll-fade-in flex flex-col gap-y-4 items-start">
      <Image src={highBoard} alt="Hero Image" class="rounded-lg" />
      <span
        class="font-[Comfortaa_Variable] font-light text-xl text-[#ffffff] absolute bottom-4 left-4 text-shadow-lg"
      >
        High Board <br /> "Shades of Green"</span
      >
    </div>
  </section>
</main>

<style>
  .loading-fade-in {
    animation-duration: 2s;
    animation-delay: 0s;
    animation-timing-function: ease-out;
    animation-iteration-count: 1;
    animation-name: fade-in;
  }
  .scroll-fade-in {
    animation-timeline: view();
    animation-name: fade-in;
    animation-range: entry;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
